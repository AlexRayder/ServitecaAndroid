<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.consultar.DetalleServicioActivity">


    <TextView
        android:id="@+id/detalleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Detalle del Servicio:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="363dp"
        android:layout_height="81dp"
        android:text="Estos son tus Servicios Solicitados"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/detalleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />
    <Button
        android:id="@+id/btnRedirigirInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a Inicio"
        app:layout_constraintTop_toBottomOf="@+id/detalleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="redirigirAInicio" />

    <Button
        android:id="@+id/btnRedirigirConsultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a Consultar"
        app:layout_constraintTop_toBottomOf="@+id/btnRedirigirInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="redirigirAConsultar" />


</androidx.constraintlayout.widget.ConstraintLayout>